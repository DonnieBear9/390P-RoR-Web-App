<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @professor.name %>
</p>

<p>
  <strong>Office building:</strong>
  <%= @professor.office_building %>
</p>

<p>
  <strong>Room number:</strong>
  <%= @professor.room_number %>
</p>

<p>
  <strong>Courses and Sections:</strong>
  <table class="table">
    <thread>
      <tr>
        <th>Course:</th>
        <th>Section Number</th>
        <th>Students List</th>
      </tr>

      <tbody>
        <% @professor.sections.each do |section| %>
        <tr>
          <td><%= section.course.course_name %></td>
          <td><%= section.section_number %></td>
          <td><%= link_to 'Students', section %>
        </tr>
        <% end %>
      </tbody>

  </thread>
</table>
</p>

<%= link_to 'Edit', edit_professor_path(@professor) %> |
<%= link_to 'Back', professors_path %>
