<h1>Sections</h1>

<table>
  <thead>
    <tr>
      <th>Section number</th>
      <th>Section building</th>
      <th>Section room</th>
      <th>Professor<th>
      <th>course name<th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.section_number %></td>
        <td><%= section.section_building %></td>
        <td><%= section.section_room %></td>
        <td><%= section.professor.name %></td>
        <td><%= section.course.course_name %></td>
        <td><%= link_to 'Show', section %></td>
        <td><%= link_to 'Edit', edit_section_path(section) %></td>
        <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    Go to <a href="/professors">Professors
</a>
</table>

