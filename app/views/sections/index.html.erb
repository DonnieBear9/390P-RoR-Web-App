<p id="notice"><%= notice %></p>

<h1>Sections</h1>

<%= form_tag(search_sections_url, method: "get") do %>
    <%= label_tag(:q,"Search for:") %>
    <%= text_field_tag(:q) %>
    <%= submit_tag("Search") %>
<% end %>

<table class="table" style="width:100">
  <thead>
    <tr>
      <th>Sections</th>
      <th align="left">Section number</th>
      <th style="width:15%" style="width:15%">Section building</th>
      <th style="width:15%">Professor</th>
      <th style="width:15%">Section room<th>
      <th style="width:15%">Course<th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td align=left><%= section.section_number %></td>
        <td align=left><%= section.section_building %></td>
        <td align=left><%= section.section_room %></td>
        <td align=left><%= section.professor.name %></td>
        <td align=left><%= section.course.course_name %></td>
        <td align=left><%= link_to 'Show', section %></td>
        <td align=left><%= link_to 'Edit', edit_section_path(section) %></td>
        <td align=left><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    Go to <a href="/professors">Professors
</a>
</table>

<br>
<%= link_to 'log out', destroy_user_session_path, method: :delete %>
<%= link_to 'New Section', new_section_path, :method => "get" %>
